<%= form_with  scope: :product do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control'  %>
    </div>

    <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :code %>
        <%= form.text_field :code, class: 'form-control'  %>
    </div>

    <div class="form-group">
        <%= form.label :sku %>
        <%= form.text_field :sku, class: 'form-control'  %>
    </div>

    <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price, in: 0.01..9999999999.99, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :quantity %>
        <%= number_field(:product, :quantity, in: 1..9999999999, step: 1, class: 'form-control') %>
    </div>

    <div class="form-group">
        <% if @product.image.attached?%>
            <%= image_tag @product.image, style: "width: 200px; display: block" %>
        <% end %>
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control" %>
    </div>

    <%= form.submit%>
    <%= link_to 'Back', products_path, class: 'btn'  %>
<% end %>
