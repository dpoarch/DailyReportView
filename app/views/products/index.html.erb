<h1>Listing Products</h1>
<%= link_to "New product", new_product_path,  class: "btn btn-primary" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Code</th>
      <th>Sku</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Image</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.code %></td>
        <td><%= product.sku %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.created_at %></td>
        <td><%= product.updated_at %></td>
        <td><div style="width: 200px; height: 150px;"><%= image_tag(product.image , :style =>"width: auto; height: 150px;") %></div></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy',  destroy_product_path(product),
          remote: true,
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New product", new_product_path,  class: "btn btn-primary" %>
