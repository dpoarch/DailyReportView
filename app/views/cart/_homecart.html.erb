<div class="col-md-11" >
    <b><label>Total:</label> <%= number_to_currency(@carts.sum("carts.quantity*carts.price"), precision: 2)%></b>
    <br/>
    <%= link_to "Checkout", carts_path(@carts), class: "btn btn-md btn-info" %>
    <br/>
</div>
<% @carts.each do |p| %>
    <div class="col-md-11" >
        <div class="card mb-12 box-shadow">
            <div style="width: 100%; height: 105px;text-align: center">
                <%= image_tag(p.location_product.product.image , :style =>"width: auto; height: 100px;", :class =>"card-img-top") %>
            </div>
            <div class="card-body">
                <ul style="list-style-type:none">
                    <li>
                        <small><%= p.location_product.product.name%></small>
                    </li>
                    <li>
                        <small class="card-text">Price: &#36; <%= number_to_currency(p.price, precision: 2) %> </small>
                    </li>
                    <li>
                        <small class="card-text">Quantity: &#36; <%= p.quantity%> </small>
                    </li>
                    <li>
                        <small class="card-text">Total: &#36; <%= number_to_currency(p.quantity*p.price, precision: 2) %> </small>
                    </li>
                </ul>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <%= link_to 'Remove Cart', destroyhomecart_path(p),
                        method: :delete, :remote=>true,
                        :class => "btn btn-sm btn-outline-secondary add-cart",
                        data: { confirm: 'Are you sure?' } %>

                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>