<%= form_with  scope: :cart do |form| %>
    <div class="form-group">
        <%= form.label :location_product_id %>
        <%= form.number_field :location_product_id, in: 1..9999999999, step: 1, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :sessionid %>
        <%= form.text_field :sessionid, class: 'form-control'  %>
    </div>
    <div class="form-group">
        <%= form.label :discount %>
        <%= form.number_field :discount, in: 0.01..9999999999.99, class: 'form-control'   %>
    </div>

    <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :quantity %>
        <%= number_field(:cart, :quantity, in: 1..9999999999, step: 1, class: 'form-control') %>
    </div>


    <%= form.submit%>
    <%= link_to 'Back', products_path, class: 'btn'  %>
<% end %>
